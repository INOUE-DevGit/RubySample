<p style="color: green"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <%= @diary.id %>
</p>
<p>
  <strong>タイトル:</strong>
  <%= @diary.title %>
</p>

<p>
  <strong>本文:</strong>
  <%= @diary.body %>
</p>

