<p style="color: green"><%= notice %></p>

<% content_for :title, "Diaries" %>

<h1>日記一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>登録日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @diaries.each do |diary| %>
      <tr id="<%= dom_id diary %>">
        <td><%= diary.id %></td>
        <td><%= link_to diary.title, diary %></td>
        <td><%= diary.created_at.to_formatted_s %></td>
        <td><%= diary.updated_at.to_formatted_s %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '日記を新規作成', new_diary_path %>
